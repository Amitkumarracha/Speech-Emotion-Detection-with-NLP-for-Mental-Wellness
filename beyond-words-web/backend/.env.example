# =====================================================
# Beyond Words Backend - Environment Configuration
# =====================================================

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration (Choose one)
# PostgreSQL / Supabase
DATABASE_URL=postgresql://user:password@localhost:5432/beyond_words

# MongoDB (Alternative)
MONGODB_URL=mongodb://localhost:27017/
MONGODB_DB_NAME=beyond_words

# Database Type: postgresql or mongodb
DB_TYPE=postgresql

# Security (Generate strong secrets in production)
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Model Paths (relative to backend directory)
MODELS_DIR=finetuned_models

# Audio Processing
SAMPLE_RATE=22050
MAX_AUDIO_SIZE_MB=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Optional: External Services
# SENTRY_DSN=your-sentry-dsn-for-error-tracking
# REDIS_URL=redis://localhost:6379/0
